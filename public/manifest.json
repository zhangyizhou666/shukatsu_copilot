{
  "manifest_version": 3,
  "name": "JP Job Form Autofill (Local)",
  "description": "Personal Chrome extension to autofill Japanese job application forms with a locally-stored profile.",
  "version": "0.1.0",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JP Job Form Autofill"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "shared/*.js",
        "ui/*.js",
        "content/*.css",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
